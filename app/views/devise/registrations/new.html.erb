<div class="text-center mb-2 flex justify-center items-center">
  <div class="mr-2">
    Already have an account?
  </div>

  <%= link_to "Log In #{fa(:'long-arrow-alt-right')}".html_safe, new_user_session_path, class: 'btn btn-primary' %>
</div>

<%= fgh_form(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="p-2 bg-gray-200 rounded mb-2">
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.fancy_text_field :username, 'Username',
      icon: :signature,
      autofocus: true 
    %>

    <%= f.fancy_text_field :email, 'Email',
      icon: :at,
      field_method: :email_field
    %>

    <%= f.fancy_text_field :password, 'Password', 
      icon: :key,
      field_method: :password_field,
      autocomplete: 'new-password'
    %>

    <%= f.fancy_text_field :password_confirmation, 'Confirm Password', 
      icon: [:key, :fal],
      field_method: :password_field,
      autocomplete: 'new-password'
    %>
  </div>

  <%= f.submit 'Sign Up' %>
<% end %>