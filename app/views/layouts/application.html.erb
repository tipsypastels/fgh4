<% if @no_body %>
  <%= yield %>
<% else %>
  <!DOCTYPE html>
  <html>
    <head>
      <title>Fgh4</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <meta name="viewport" content="width=device-width, initial-scale=1">

      <script defer src="https://www.pokecommunity.com/library/fontawesome-pro-5.8.2-web/js/all.min.js"></script>

      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body class="<%= 'shout-showing' if Shout.show? %>">
      <%= rp 'layouts/banner' %>

      <div id="page-wrapper" class="bg-white mb-8">
        <main class="container mx-auto">
          <%= yield %>
        </main>
      </div>
    </body>
  </html>
<% end %>